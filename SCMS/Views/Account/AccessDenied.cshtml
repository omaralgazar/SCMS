@{
	ViewData["Title"] = "Access Denied";
	Layout = "_Layout";
}


<div class="container" style="margin-top:60px; max-width:600px;">
	<div class="card" style="text-align:center;">
		<h1 style="color: var(--danger); font-size:32px;">🚫 Access Denied</h1>
		<p style="margin:20px 0; color: var(--text-muted);">
			You do not have permission to access this page.
		</p>


		<div style="margin-top:30px;">
			<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
				Go to Dashboard
			</a>
			<a asp-controller="Account" asp-action="Logout" class="btn btn-danger" style="margin-left:10px;">
				Logout
			</a>
		</div>
	</div>
</div>