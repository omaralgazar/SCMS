@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
}

<div class="container" style="max-width: 500px; margin-top: 60px;">
    <div class="card" style="text-align: center; padding: 30px;">
        <h1 style="color: var(--primary); font-size: 28px;">🔑 Forgot Password</h1>
        <p style="margin: 20px 0; color: var(--text-muted);">
            Enter your email or username and we'll send you instructions to reset your password.
        </p>

        <form asp-action="ForgotPassword" method="post">
            <label for="EmailOrUsername">Email or Username</label>
            <input type="text" id="EmailOrUsername" name="EmailOrUsername" placeholder="Enter your email or username" required />

            <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Send Instructions</button>
        </form>

        <div style="margin-top: 20px;">
            <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">Back to Login</a>
        </div>
    </div>
</div>
