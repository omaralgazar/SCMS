@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container" style="max-width: 400px; margin-top: 80px;">
    <div class="card" style="padding: 30px; text-align: center; box-shadow: 0 4px 10px rgba(0,0,0,0.1); border-radius: 10px;">
        <h1 style="color: var(--primary); font-size: 28px; margin-bottom: 10px;">🔐 Login</h1>
        <p style="margin: 15px 0; color: var(--text-muted); font-size: 14px;">
            Enter your credentials to access the system
        </p>

        @if (TempData["Message"] != null)
        {
            <div class="badge badge-warning" style="margin-bottom:15px; font-size:14px; padding: 8px 12px;">
                @TempData["Message"]
            </div>
        }

        <form asp-action="Login" method="post">
            <div style="margin-bottom: 15px;">
                <label for="EmailOrUsername" style="font-weight: 500;">Email or Username</label>
                <input type="text" id="EmailOrUsername" name="EmailOrUsername" placeholder="Enter your email or username" required
                       style="width: 100%; padding: 8px 10px; margin-top: 5px; border-radius: 5px; border: 1px solid #ccc;" />
            </div>

            <div style="margin-bottom: 15px;">
                <label for="Password" style="font-weight: 500;">Password</label>
                <input type="password" id="Password" name="Password" placeholder="Enter your password" required
                       style="width: 100%; padding: 8px 10px; margin-top: 5px; border-radius: 5px; border: 1px solid #ccc;" />
            </div>

            <div style="margin-bottom: 15px;">
                <label for="UserType" style="font-weight: 500;">Login as</label>
                <select id="UserType" name="UserType" required
                        style="width: 100%; padding: 8px 10px; margin-top: 5px; border-radius: 5px; border: 1px solid #ccc;">
                    <option value="" disabled selected>Select user type</option>
                    <option value="Admin">Admin</option>
                    <option value="Doctor">Doctor</option>
                    <option value="Receptionist">Receptionist</option>
                    <option value="Radiologist">Radiologist</option>
                    <option value="Patient">Patient</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 10px; padding: 10px; font-size: 16px;">
                Login
            </button>
        </form>

        <div style="margin-top: 15px; text-align: center;">
            <a asp-action="ForgotPassword" class="btn btn-secondary" style="padding: 6px 12px; font-size: 14px;">Forgot Password?</a>
        </div>

        <!-- Sign Up button -->
        <div style="margin-top: 15px; text-align: center; font-size: 14px;">
            <span style="color: var(--text-muted);">Don't have an account?</span>
            <a asp-action="Register" class="btn btn-success" style="margin-left: 10px; padding: 6px 12px;">Sign Up</a>
        </div>
    </div>
</div>
