@model SCMS.ViewModels.RegisterVm

@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<div class="auth-page">
    <div class="auth-card card shadow-sm">
        <h1 class="text-center mb-1" style="color: var(--primary); font-size: 26px;">üìù Register</h1>

        <p class="text-center mb-3" style="color: var(--text-muted); font-size: 14px;">
            Create a new account to access the Smart Clinic System
        </p>

        <div asp-validation-summary="All" class="text-danger mb-2"></div>

        <form asp-action="Register" method="post" novalidate>
            @Html.AntiForgeryToken()

            <!-- ‚úÖ External signup = Patient only -->
            <input type="hidden" asp-for="UserType" value="Patient" />

            <div class="mb-2">
                <label asp-for="FullName" class="form-label mb-1">Full Name</label>
                <input asp-for="FullName" class="form-control form-control-sm"
                       placeholder="Enter your full name" required />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Email" class="form-label mb-1">Email</label>
                <input asp-for="Email" type="email" class="form-control form-control-sm"
                       placeholder="Enter your email" required />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Phone" class="form-label mb-1">Phone</label>
                <input asp-for="Phone" type="text" class="form-control form-control-sm"
                       placeholder="Enter your phone number" required />
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Username" class="form-label mb-1">Username</label>
                <input asp-for="Username" class="form-control form-control-sm"
                       placeholder="Choose a username" required />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Password" class="form-label mb-1">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-sm"
                       placeholder="Enter a password" required />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label mb-1">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm"
                       placeholder="Confirm your password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-sm">
                Register
            </button>
        </form>

        <div class="mt-2 text-center">
            <a asp-action="Login" class="btn btn-secondary w-100 btn-sm">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
