@model SCMS.ViewModels.RegisterVm

@{
    ViewData["Title"] = "Create User";
    Layout = "_Layout";
}

<div class="container" style="margin-top:40px;">
    <div class="card shadow-sm" style="max-width: 560px; margin: 0 auto; padding: 22px; border-radius: 14px;">
        <h1 style="color: var(--primary); font-size:26px; margin-bottom:16px;">➕ Create User</h1>

        <div asp-validation-summary="All" class="text-danger mb-2"></div>

        <form asp-action="CreateUser" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="mb-2">
                <label asp-for="FullName" class="form-label mb-1">Full Name</label>
                <input asp-for="FullName" class="form-control form-control-sm" placeholder="Enter full name" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Email" class="form-label mb-1">Email</label>
                <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Phone" class="form-label mb-1">Phone</label>
                <input asp-for="Phone" class="form-control form-control-sm" placeholder="Enter phone" />
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Username" class="form-label mb-1">Username</label>
                <input asp-for="Username" class="form-control form-control-sm" placeholder="Enter username" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Password" class="form-label mb-1">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-sm" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="ConfirmPassword" class="form-label mb-1">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UserType" class="form-label mb-1">User Type</label>
                <select asp-for="UserType" class="form-select form-select-sm">
                    <option value="">-- Select User Type --</option>
                    <option value="Admin">Admin</option>
                    <option value="Doctor">Doctor</option>
                    <option value="Receptionist">Receptionist</option>
                    <option value="Radiologist">Radiologist</option>
                    <option value="Patient">Patient</option>
                </select>
                <span asp-validation-for="UserType" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-sm">Create</button>

            <a asp-action="Users" class="btn btn-secondary w-100 btn-sm mt-2">Back to Users</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
