@model SCMS.ViewModels.AdminDashboardVm

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="container" style="margin-top:40px;">
    <h1 style="color: var(--primary); font-size:28px; margin-bottom:25px;">🏠 Admin Dashboard</h1>

    <!-- ====== Stats Cards ====== -->
    <div class="row" style="gap:20px; display:flex; flex-wrap:wrap;">
        <div class="card stat" style="flex:1 1 200px;">
            <h3>Total Users</h3>
            <span>@Model.TotalUsers</span>
        </div>
        <div class="card stat" style="flex:1 1 200px;">
            <h3>Total Doctors</h3>
            <span>@Model.TotalDoctors</span>
        </div>
        <div class="card stat" style="flex:1 1 200px;">
            <h3>Total Patients</h3>
            <span>@Model.TotalPatients</span>
        </div>
        <div class="card stat" style="flex:1 1 200px;">
            <h3>Today's Appointments</h3>
            <span>@Model.TodayAppointmentsCount</span>
        </div>
    </div>

    <!-- ====== Recent Users Table ====== -->
    <div class="card" style="margin-top:30px;">
        <h2 style="color: var(--primary); font-size:24px; margin-bottom:15px;">Recent Users</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>User Type</th>
                    <th>Date Added</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.RecentUsers.Any())
                {
                    int counter = 1;
                    foreach (var user in Model.RecentUsers)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.UserType</td>
                            <td>@user.DateAdded.ToString("yyyy-MM-dd")</td>
                        </tr>
                        counter++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" style="text-align:center; color: var(--text-muted);">
                            No recent users.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
