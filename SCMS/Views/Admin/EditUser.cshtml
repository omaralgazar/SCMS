@model SCMS.ViewModels.UserSummaryVm

@{
    ViewData["Title"] = "Edit User";
    Layout = "_Layout";
}

<div class="container" style="max-width:500px; margin-top:60px;">
    <div class="card" style="padding:30px; text-align:center;">
        <h1 style="color: var(--primary); font-size:28px; margin-bottom:20px;">✏️ Edit User</h1>

        <form asp-controller="Admin" asp-action="EditUser" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />

            <label asp-for="FullName"></label>
            <input asp-for="FullName" placeholder="Enter full name" required />

            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" placeholder="Enter email" required />

            <label asp-for="Phone"></label>
            <input asp-for="Phone" placeholder="Enter phone number" />

            <label>User Type</label>
            <input value="@Model.UserType" disabled />

            <button type="submit" class="btn btn-primary" style="margin-top:20px;">Update User</button>
        </form>

        <div style="margin-top:15px;">
            <a asp-controller="Admin" asp-action="Users" class="btn btn-secondary">Back to Users List</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
