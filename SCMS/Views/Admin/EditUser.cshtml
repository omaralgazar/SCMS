@model SCMS.Models.User

@{
    ViewData["Title"] = "Edit User";
    Layout = "_Layout";
}

<div class="container" style="max-width:500px; margin-top:60px;">
    <div class="card" style="padding:30px; text-align:center;">
        <h1 style="color: var(--primary); font-size:28px; margin-bottom:20px;">✏️ Edit User</h1>

        <form asp-action="EditUser" method="post">
            <input type="hidden" asp-for="UserId" />

            <label for="FullName">Full Name</label>
            <input type="text" id="FullName" asp-for="FullName" placeholder="Enter full name" required />

            <label for="Email">Email</label>
            <input type="email" id="Email" asp-for="Email" placeholder="Enter email" required />

            <label for="Phone">Phone</label>
            <input type="text" id="Phone" asp-for="Phone" placeholder="Enter phone number" />

            <label for="UserType">User Type</label>
            <select id="UserType" name="UserType" required>
                <option value="Admin" selected="@((Model.GetType().Name == "Admin").ToString())">Admin</option>
                <option value="Doctor" selected="@((Model.GetType().Name == "Doctor").ToString())">Doctor</option>
                <option value="Receptionist" selected="@((Model.GetType().Name == "Receptionist").ToString())">Receptionist</option>
                <option value="Radiologist" selected="@((Model.GetType().Name == "Radiologist").ToString())">Radiologist</option>
                <option value="Patient" selected="@((Model.GetType().Name == "Patient").ToString())">Patient</option>
            </select>

            <button type="submit" class="btn btn-primary" style="margin-top:20px;">Update User</button>
        </form>

        <div style="margin-top:15px;">
            <a asp-action="Users" class="btn btn-secondary">Back to Users List</a>
        </div>
    </div>
</div>
