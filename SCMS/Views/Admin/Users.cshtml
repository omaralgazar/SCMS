@model List<SCMS.ViewModels.UserSummaryVm>
@{
    ViewData["Title"] = "Users";
    Layout = "_Layout";
}

<div class="container" style="margin-top: 50px;">
    <h1 class="mb-4">All Users</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>User Type</th>
                <th>Date Added</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.UserType</td>
                    <td>@user.DateAdded.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="DeleteUser" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="CreateUser" class="btn btn-success">Create New User</a>
    </div>
</div>
