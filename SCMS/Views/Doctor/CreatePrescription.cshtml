@model SCMS.ViewModels.Doctor.CreatePrescriptionVm

@{
    ViewData["Title"] = "Create Prescription";
}

<link rel="stylesheet" href="~/css/clinic.css" />

<div class="page-container">
    <div class="soft-header">
        <h2>💊 Create Prescription</h2>
    </div>

    <div class="card mt-3">
        <div asp-validation-summary="All" class="text-danger mb-2"></div>

        <form asp-action="CreatePrescription" asp-controller="Doctor" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="PatientId" />

            <div class="form-group mb-3">
                <label asp-for="Diagnosis"></label>
                <textarea asp-for="Diagnosis" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Treatment"></label>
                <textarea asp-for="Treatment" class="form-control" rows="4"
                          placeholder="Medicine name, dosage, instructions"></textarea>
                <span asp-validation-for="Treatment" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="d-flex align-items-center gap-2">
                    <input asp-for="RadiologyRequested" type="checkbox" />
                    Radiology Requested
                </label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save Prescription</button>
                <a asp-action="PatientFile"
                   asp-controller="Doctor"
                   asp-route-patientId="@Model.PatientId"
                   class="btn btn-secondary">
                    Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
