@model SCMS.ViewModels.DoctorProfileVm

@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="container mt-4 fade-in">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Welcome, @Model.FullName</h2>

        <span class="badge bg-primary fs-6">
            Rating: @Model.AverageRate.ToString("0.0") (@Model.FeedbackCount Feedbacks)
        </span>
    </div>
    @if (Model.IsProfileIncomplete)
    {
        <div class="profile-alert">
            <strong>⚠️ Attention:</strong>
             Please Complete Your Informatin

            <a asp-controller="Doctor"
               asp-action="Edit"
               class="btn-complete">
                Complete Information
            </a>
        </div>
    }


    <!-- Info Cards -->
    <div class="dashboard-cards">
        <div class="dashboard-card hover-rise">
            <div>
                <h4>Specialization</h4>
                <span style="font-size:18px;font-weight:800;color:var(--text-main)">@Model.Specialization</span>
            </div>
            <div class="icon">🩺</div>
        </div>

        <div class="dashboard-card hover-rise">
            <div>
                <h4>Department</h4>
                <span style="font-size:18px;font-weight:800;color:var(--text-main)">@Model.DepartmentName</span>
            </div>
            <div class="icon">🏥</div>
        </div>

        <div class="dashboard-card hover-rise">
            <div>
                <h4>Years of Experience</h4>
                <span>@Model.YearsOfExperience</span>
            </div>
            <div class="icon">⏳</div>
        </div>
    </div>

    <!-- Upcoming Appointments -->
    <div class="card hover-rise">
        <div class="card-header soft-header d-flex justify-content-between align-items-center">
            <span>Upcoming Appointments</span>

            <div class="d-flex gap-2">
                <a asp-action="Appointments"
                   asp-route-doctorId="@Model.DoctorId"
                   class="btn btn-sm btn-outline-primary">
                    View All
                </a>

                <a asp-action="CreateAppointment"
                   asp-route-doctorId="@Model.DoctorId"
                   class="btn btn-sm btn-success">
                    + Add Appointment
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            @if (!Model.UpcomingAppointments.Any())
            {
                <div class="p-4 text-center text-muted">
                    No upcoming appointments.
                </div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Capacity</th>
                            <th>Booked</th>
                            <th>Remaining</th>
                            <th>Status</th>
                            <th style="width:220px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appt in Model.UpcomingAppointments)
                        {
                            var badge = appt.Status == "Completed"
                            ? "bg-success"
                            : appt.Status == "Pending"
                            ? "bg-warning text-dark"
                            : "bg-info";

                            <tr>
                                <td>@appt.AppointmentDate.ToString("dd MMM yyyy")</td>
                                <td>@appt.StartTime.ToString(@"hh\:mm") - @appt.EndTime.ToString(@"hh\:mm")</td>
                                <td>@appt.Capacity</td>
                                <td>@appt.CurrentCount</td>
                                <td>@appt.RemainingSlots</td>
                                <td><span class="badge @badge">@appt.Status</span></td>
                                <td class="d-flex gap-2">
                                    <a asp-action="AppointmentDetails"
                                       asp-route-id="@appt.AppointmentId"
                                       class="btn btn-sm btn-primary">
                                        Details
                                    </a>

                                    <a asp-action="CreatePrescription"
                                       asp-route-patientId="0"
                                       asp-route-doctorId="@Model.DoctorId"
                                       class="btn btn-sm btn-outline-primary">
                                        New Prescription
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

</div>
