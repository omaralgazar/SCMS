@model SCMS.ViewModels.FeedbackVm

<h2>Give Feedback to Doctor</h2>

<form method="post" asp-action="SubmitFeedback">
    <div class="form-group">
        <label for="DoctorName">Doctor Name</label>
        <input type="text" class="form-control" id="DoctorName" name="DoctorName" value="@Model.DoctorName" disabled />
    </div>

    <div class="form-group">
        <label for="Content">Your Feedback</label>
        <textarea class="form-control" id="Content" name="Content" rows="4" placeholder="Write your feedback..." required>@Model.Content</textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit Feedback</button>
</form>
