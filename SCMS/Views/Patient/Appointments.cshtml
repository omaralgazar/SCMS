@model SCMS.ViewModels.Patient.PatientVM
@{
    var bookings = ViewBag.Bookings as List<SCMS.ViewModels.Patient.PatientAppointmentRowVm>
                   ?? new List<SCMS.ViewModels.Patient.PatientAppointmentRowVm>();
}
<link rel="stylesheet" href="~/css/clinic.css" />

<div class="page-container">
    <div class="soft-header">
        <h2>📅 My Appointments</h2>
    </div>

    <div class="card mt-3">
        @if (!bookings.Any())
        {
            <div class="alert alert-info">No bookings found.</div>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Doctor</th>
                        <th>Price</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in bookings)
                    {
                        <tr>
                            <td>@b.AppointmentDate.ToString("dd/MM/yyyy")</td>
                            <td>@b.StartTime - @b.EndTime</td>
                            <td>@b.DoctorName</td>
                            <td>@b.Price</td>
                            <td>@b.BookingStatus</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
