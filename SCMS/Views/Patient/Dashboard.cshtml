@model SCMS.ViewModels.Patient.PatientVM

<div class="patient-dashboard">
    <h2>Welcome, @Model.FullName</h2>

    <!-- ===== Dashboard Header ===== -->
    <div class="dashboard-header">
        <div>
            <h2 class="dash-title">Patient Dashboard</h2>
            <p class="dash-sub">Overview of your medical activity</p>
        </div>

        <a class="btn btn-primary chat-btn"
           asp-controller="Chat"
           asp-action="Start">
            üí¨ Chat with Clinic
        </a>

        @if (Model.IsProfileIncomplete)
        {
            <div class="profile-alert">
                <strong>‚ö†Ô∏è Attention:</strong>
                Please Complete Your Information

                <a asp-controller="Patient"
                   asp-action="Edit"
                   asp-route-id="@Model.PatientId"
                   class="btn-complete">
                    Complete Information
                </a>
            </div>
        }
    </div>

    </div> <!-- ‚úÖ ŸÖŸáŸÖ: ŸÇŸÅŸÑ dashboard-header -->
