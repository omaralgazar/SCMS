@model SCMS.ViewModels.Patient.PatientVM
<link rel="stylesheet" href="~/css/clinic.css" />

<div class="patient-dashboard">
    <h2>Welcome, @Model.FullName</h2>

    <!-- ===== Dashboard Header ===== -->
    <div class="dashboard-header">
        <div>
            <h2 class="dash-title">Patient Dashboard</h2>
            <p class="dash-sub">Overview of your medical activity</p>
        </div>

        <a class="btn btn-primary chat-btn"
           asp-controller="Chat"
           asp-action="Conversation">
            💬 Chat with Clinic
        </a>
    </div> <!-- ✅ مهم: قفل dashboard-header -->
    <!-- ===== Stats Cards ===== -->
    <div class="dashboard-cards">

        <a asp-controller="Patient"
           asp-action="Appointments"
           asp-route-id="@Model.UserId"
           class="dashboard-card-link">
            <div class="dashboard-card">
                <div>
                    <h4>Appointments</h4>
                    <span>@Model.AppointmentsCount</span>
                </div>
                <div class="icon">📅</div>
            </div>
        </a>

        <a asp-controller="Patient"
           asp-action="Prescriptions"
           asp-route-id="@Model.UserId"
           class="dashboard-card-link">
            <div class="dashboard-card">
                <div>
                    <h4>Prescriptions</h4>
                    <span>@Model.PrescriptionsCount</span>
                </div>
                <div class="icon">💊</div>
            </div>
        </a>

        <a asp-controller="Patient"
           asp-action="MedicalRecords"
           asp-route-id="@Model.UserId"
           class="dashboard-card-link">
            <div class="dashboard-card">
                <div>
                    <h4>Medical Records</h4>
                    <span>@Model.MedicalRecordsCount</span>
                </div>
                <div class="icon">📋</div>
            </div>
        </a>

    </div>
</div>

