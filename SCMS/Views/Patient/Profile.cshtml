@model SCMS.ViewModels.Patient.PatientVM

<div class="profile-card">
    <div class="profile-head">
        <h2 class="profile-title">Patient Profile</h2>
        <div class="profile-sub">Your basic information</div>
    </div>

    <div class="kv-grid">
        <div class="kv-row">
            <div class="kv-key">Name</div>
            <div class="kv-val">@Model.FullName</div>
        </div>

        <div class="kv-row">
            <div class="kv-key">Gender</div>
            <div class="kv-val">@Model.Gender</div>
        </div>

        <div class="kv-row">
            <div class="kv-key">Age</div>
            <div class="kv-val">@Model.Age</div>
        </div>

        <div class="kv-row">
            <div class="kv-key">Date of Birth</div>
            <div class="kv-val">@Model.DateOfBirth.ToShortDateString()</div>
        </div>

        <div class="kv-row">
            <div class="kv-key">Address</div>
            <div class="kv-val">@Model.Address</div>
        </div>

        <div class="kv-row kv-full">
            <div class="kv-key">Medical History</div>
            <div class="kv-val">@Model.MedicalHistorySummary</div>
        </div>
    </div>
</div>
