@model SCMS.ViewModels.Patient.PatientRadiologyResultsVm

<link rel="stylesheet" href="~/css/clinic.css" />

<div class="page-container">
    <div class="soft-header">
        <h2>🩻 Radiology Results</h2>
        <p class="text-muted">Patient: @Model.PatientName</p>
    </div>

    <div class="card mt-3">
        @if (Model.Results == null || !Model.Results.Any())
        {
            <div class="alert alert-info">No radiology results found.</div>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Test</th>
                        <th>Doctor</th>
                        <th>Radiologist</th>
                        <th>Report</th>
                        <th style="width:120px;">Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.Results)
                    {
                        <tr>
                            <td>@r.ResultDate.ToString("dd/MM/yyyy")</td>
                            <td>@r.TestName</td>
                            <td>@r.DoctorName</td>
                            <td>@r.RadiologistName</td>
                            <td style="max-width:420px;">
                                <div style="white-space:pre-wrap;">@r.Report</div>
                            </td>
                            <td class="actions-cell">
                                @if (!string.IsNullOrWhiteSpace(r.ImagePath))
                                {
                                    <a class="btn btn-sm btn-primary" target="_blank" href="@r.ImagePath">Open</a>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <div class="mt-3">
        <a asp-controller="Patient" asp-action="Dashboard" asp-route-id="@Model.PatientId" class="btn btn-secondary">Back</a>
    </div>
</div>
