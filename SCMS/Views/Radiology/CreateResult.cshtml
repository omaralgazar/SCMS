@model SCMS.ViewModels.RadiologyResultFormVm

@section Styles {
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/clinic.css" />
}

@{
    ViewData["Title"] = "Create Radiology Result";
}

<div class="soft-header">
    <h2>Create Radiology Result</h2>
</div>

<div class="page-container">
    <form asp-action="CreateResult" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="RequestId" />
        <input type="hidden" asp-for="RadiologistId" />

        <div class="mb-3">
            <label asp-for="ImagePath" class="form-label"></label>
            <input asp-for="ImagePath" class="form-control" placeholder="e.g. /images/xray1.png" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Report" class="form-label"></label>
            <textarea asp-for="Report" rows="5" class="form-control" placeholder="Write radiology report here..."></textarea>
            <span asp-validation-for="Report" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Status" />

        <button type="submit" class="btn btn-success">Save Result</button>
        <a asp-action="Requests" class="btn btn-secondary ms-2">Back</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
