@model IEnumerable<SCMS.ViewModels.AppointmentSummaryVm>

@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-4">

    <h2 class="mb-4">All Appointments 📅</h2>

    <div class="card">
        <div class="card-header bg-dark text-white">
            Appointment List
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Doctor</th>
                        <th>Patient</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                No appointments found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var a in Model)
                        {
                            <tr>
                                <td>@a.AppointmentDate.ToShortDateString()</td>
                                <td>@a.StartTime</td>
                                <td>@a.DoctorName</td>
                                <td>@a.PatientName</td>
                                <td>
                                    <span class="badge @(a.Status == "Completed" ? "bg-success" : a.Status == "Cancelled" ? "bg-danger" : "bg-info")">
                                        @a.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
