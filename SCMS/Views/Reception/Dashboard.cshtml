@model SCMS.ViewModels.ReceptionDashboardVm

@{
    ViewData["Title"] = "Reception Dashboard";

    var recentPatientsCount = Model.RecentPatients?.Count() ?? 0;
    var radiologyRequestsCount = (int)(ViewBag.RadiologyRequestsCount ?? 0);
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Welcome, @Model.ReceptionistName</h2>

        <!-- ✅ زرار إضافة موعد يفتح الصفحة الجديدة -->
        <a asp-controller="Reception"
           asp-action="AddNewAppointment"
           class="btn btn-success">
            ➕ Add Appointment
        </a>
    </div>

    <!-- Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Today's Appointments</h5>
                    <h2>@Model.TodaysAppointmentsCount</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Recent Patients</h5>
                    <h2>@recentPatientsCount</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Radiology Requests</h5>
                    <h2>@radiologyRequestsCount</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Today's Appointments -->
    <div class="card mb-4">
        <div class="card-header">Today's Appointments</div>

        <table class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Doctor</th>
                    <th>Patient</th>
                    <th>Status</th>
                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.TodaysAppointments == null || !Model.TodaysAppointments.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No appointments today.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.TodaysAppointments)
                    {
                        <tr>
                            <td>@item.AppointmentDate.ToShortDateString()</td>
                            <td>@item.StartTime</td>
                            <td>@item.DoctorName</td>
                            <td>@item.PatientName</td>
                            <td>@item.Status</td>
                            <td>
                                <!-- ✅ الأزرار جنب بعض -->
                                <div class="d-flex align-items-center gap-2">
                                    <a asp-controller="Reception"
                                       asp-action="EditAppointment"
                                       asp-route-id="@item.AppointmentId"
                                       class="btn btn-sm btn-warning">✏</a>

                                    <form asp-controller="Reception"
                                          asp-action="DeleteAppointment"
                                          asp-route-id="@item.AppointmentId"
                                          method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-sm btn-danger"
                                                onclick="return confirm('Delete appointment?');">
                                            🗑
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Recent Patients -->
    <div class="card">
        <div class="card-header">Recent Patients</div>

        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Phone</th>
                    <th>Last Visit</th>
                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.RecentPatients == null || !Model.RecentPatients.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No recent patients.</td>
                    </tr>
                }
                else
                {
                    foreach (var p in Model.RecentPatients)
                    {
                        <tr>
                            <td>@p.FullName</td>
                            <td>@p.Age</td>
                            <td>@p.Phone</td>
                            <td>@(p.LastVisit?.ToShortDateString() ?? "-")</td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <a asp-controller="Reception"
                                       asp-action="PatientDetails"
                                       asp-route-id="@p.PatientId"
                                       class="btn btn-sm btn-info">👁</a>

                                    <a asp-controller="Reception"
                                       asp-action="EditPatient"
                                       asp-route-id="@p.PatientId"
                                       class="btn btn-sm btn-warning">✏</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>