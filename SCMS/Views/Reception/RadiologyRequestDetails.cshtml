@model SCMS.Models.RadiologyRequest

@{
    ViewData["Title"] = "Radiology Request Details";
}

<div class="container mt-4">

    <h2 class="mb-4">Radiology Request Details 🔬</h2>

    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            Request Info
        </div>
        <div class="card-body">
            <p><strong>Patient:</strong> @Model.Patient.FullName</p>
            <p><strong>Age:</strong> @Model.Patient.Age</p>
            <p><strong>Phone:</strong> @Model.Patient.Phone</p>
            <p><strong>Doctor:</strong> @Model.Doctor.FullName</p>
            <p><strong>Test Name:</strong> @Model.TestName</p>
            <p><strong>Request Date:</strong> @Model.RequestDate.ToShortDateString()</p>
            <p><strong>Status:</strong>
                <span class="badge @(Model.Status == "Completed" ? "bg-success" : Model.Status == "Pending" ? "bg-warning text-dark" : "bg-info")">
                    @Model.Status
                </span>
            </p>

            @if (Model.Result != null)
            {
                <hr />
                <h5>Result</h5>
                <p><strong>Result Date:</strong> @Model.Result.ResultDate.ToShortDateString()</p>
            }
        </div>
    </div>

</div>
