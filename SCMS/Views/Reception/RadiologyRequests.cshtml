@model SCMS.ViewModels.RadiologyRequestListVm

@{
    ViewData["Title"] = "Radiology Requests";
}

<div class="container mt-4">

    <h2 class="mb-4">Radiology Requests 🧪</h2>

    <!-- Search -->
    <form method="get" class="mb-3 d-flex">
        <input type="text"
               name="searchTerm"
               class="form-control me-2"
               placeholder="Search by patient, phone, or test..."
               value="@Model.SearchTerm" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="RadiologyRequests" class="btn btn-secondary ms-2">Reset</a>
    </form>

    <div class="card">
        <div class="card-header bg-dark text-white">
            Requests List
        </div>

        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Patient</th>
                        <th>Age</th>
                        <th>Phone</th>
                        <th>Test Name</th>
                        <th>Request Date</th>
                        <th>Status</th>
                        <th style="width:120px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Requests == null || !Model.Requests.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No radiology requests found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var r in Model.Requests)
                        {
                            <tr>
                                <td>@r.PatientName</td>
                                <td>@r.Age</td>
                                <td>@r.Phone</td>
                                <td>@r.TestName</td>
                                <td>@r.RequestDate.ToShortDateString()</td>
                                <td>
                                    <span class="badge @(r.Status == "Completed"
                                                                                  ? "bg-success"
                                                                                  : r.Status == "Pending"
                                                                                      ? "bg-warning text-dark"
                                                                                      : "bg-info")">
                                @r.Status
                            </span>
                        </td>
                        <td>
                            <a asp-controller="Reception"
                               asp-action="RadiologyRequestDetails"
                               asp-route-id="@r.RequestId"
                               class="btn btn-sm btn-primary">
                                Details
                            </a>
                        </td>
                    </tr>
                                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Radiology pagination" class="mt-3">
            <ul class="pagination justify-content-center">

                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="?page=@(Model.CurrentPage - 1)&searchTerm=@Model.SearchTerm">
                        Previous
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link"
                           href="?page=@i&searchTerm=@Model.SearchTerm">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="?page=@(Model.CurrentPage + 1)&searchTerm=@Model.SearchTerm">
                        Next
                    </a>
                </li>

            </ul>
        </nav>
    }

</div>