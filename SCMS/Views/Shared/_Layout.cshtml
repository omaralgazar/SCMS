                        <a class="nav-link @Active("Patient", "Prescriptions")"
                           asp-controller="Patient" asp-action="Prescriptions" asp-route-id="@userId">
                            <span>üíä</span> <span>Prescriptions</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Patient", "MedicalRecords")"
                           asp-controller="Patient" asp-action="MedicalRecords" asp-route-id="@userId">
                            <span>üìã</span> <span>Medical Records</span>
