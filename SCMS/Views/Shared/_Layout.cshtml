@using SCMS.Models
@{
    var userType = Context.Session.GetInt32("UserType");
    var userIdStr = Context.Session.GetString("UserId");
    var isLoggedIn = userIdStr != null;

    int? userId = null;
    if (int.TryParse(userIdStr, out var parsedId))
    {
        userId = parsedId;
    }

    // ‚úÖ fallback: ŸÑŸà ÿßŸÑŸÄSession ŸÅÿßÿ∂Ÿä ÿÆŸèÿØ ŸÖŸÜ ÿßŸÑŸÄRoles
    var resolvedUserType = userType;
    if (!resolvedUserType.HasValue)
    {
        if (User?.Identity?.IsAuthenticated ?? false)
        {
            if (User.IsInRole("Admin")) resolvedUserType = (int)UserType.Admin;
            else if (User.IsInRole("Doctor")) resolvedUserType = (int)UserType.Doctor;
            else if (User.IsInRole("Radiologist")) resolvedUserType = (int)UserType.Radiologist;
            else if (User.IsInRole("Receptionist")) resolvedUserType = (int)UserType.Receptionist;
            else if (User.IsInRole("Patient")) resolvedUserType = (int)UserType.Patient;
        }
    }

    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";

    string Active(string c, string a) => (currentController == c && currentAction == a) ? "active" : "";
    string ActiveController(string c) => (currentController == c) ? "active" : "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SCMS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/clinic.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SCMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/feedbacks.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="app-shell">

        <!-- ===== Sidebar ===== -->
        <aside class="sidebar">
            <div class="brand">
                <img src="~/images/logo.svg"
                     class="logo"
                     alt="SmartCare Logo"
