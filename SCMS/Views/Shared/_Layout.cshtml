                   ========================= *@
                @if (resolvedUserType == (int)UserType.Admin)
                {
                    <li class="nav-item">
                        <a class="nav-link @Active("Admin", "Dashboard")"
                           asp-controller="Admin" asp-action="Dashboard">
                            <span>üìä</span> <span>Dashboard</span>
                        </a>
                    </li>

