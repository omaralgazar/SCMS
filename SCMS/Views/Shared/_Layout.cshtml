                    </li>
                }

                @* =========================
                   Receptionist Menu
                   ========================= *@
                @if (resolvedUserType == (int)UserType.Receptionist)
                {
                    <li class="nav-item">
                        <a class="nav-link @Active("Reception", "Dashboard")"
                           asp-controller="Reception" asp-action="Dashboard">
                            <span>üìä</span> <span>Dashboard</span>
