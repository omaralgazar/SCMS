                           asp-controller="Reception" asp-action="RadiologyRequests">
                            <span>ü©ª</span> <span>Radiology Requests</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @ActiveController("Chat")"
                           asp-controller="Chat" asp-action="Index">
                            <span>üí¨</span> <span>Chats</span>
                        </a>
                    </li>
                }

                @* =========================
