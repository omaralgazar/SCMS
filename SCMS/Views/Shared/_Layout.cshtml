                <div>
                    <div class="t1">SmartCare</div>
                    <div class="t2">Clinic System</div>
                </div>
            </div>

            <ul class="nav flex-column">
                @* =========================
                   Radiologist Menu
                   ========================= *@
                @if (resolvedUserType == (int)UserType.Radiologist)
                {
                    <li class="nav-item">
                        <a class="nav-link @Active("Radiology", "Requests")"
                           asp-controller="Radiology" asp-action="Requests">
                            <span>üìã</span> <span>All Requests</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Radiology" && currentAction == "Requests" && Context.Request.Query["status"] == "Pending" ? "active" : "")"
                           asp-controller="Radiology" asp-action="Requests" asp-route-status="Pending">
                            <span>‚è≥</span> <span>Pending Requests</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Radiology" && currentAction == "Requests" && Context.Request.Query["status"] == "Completed" ? "active" : "")"
                           asp-controller="Radiology" asp-action="Requests" asp-route-status="Completed">
                            <span>‚úÖ</span> <span>Completed Requests</span>
                        </a>
                    </li>
                }

                @* =========================
                   Doctor Menu (‚úÖ based on your DoctorController actions)
                   ========================= *@
