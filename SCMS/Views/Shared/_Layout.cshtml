@using SCMS.Models
@{
    var userType = Context.Session.GetInt32("UserType");
    var userIdStr = Context.Session.GetString("UserId");
    var isLoggedIn = userIdStr != null;

    int? userId = null;
    if (int.TryParse(userIdStr, out var parsedId))
    {
        userId = parsedId;
    }

    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
    string Active(string c, string a) => (currentController == c && currentAction == a) ? "active" : "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SCMS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/clinic.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SCMS.styles.css" asp-append-version="true" />

    <!-- Sidebar/Layout CSS -->
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="app-shell">

        <!-- ===== Sidebar ===== -->
        <aside class="sidebar">
            <div class="brand">
                <div class="logo"></div>
                <div>
                    <div class="t1">SmartCare</div>
                    <div class="t2">Clinic System</div>
                </div>
            </div>

            <ul class="nav flex-column">

                @* =========================
                   Patient Menu
                   ========================= *@
                @if (userType == (int)UserType.Patient)
                {
                    <li class="nav-item">
                        <a class="nav-link @Active("Patient", "Dashboard")"
                           asp-controller="Patient" asp-action="Dashboard" asp-route-id="@userId">
                            <span>🏠</span> <span>Dashboard</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Patient", "Appointments")"
                           asp-controller="Patient" asp-action="Appointments" asp-route-id="@userId">
                            <span>📅</span> <span>Appointments</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Patient", "Prescriptions")"
                           asp-controller="Patient" asp-action="Prescriptions" asp-route-id="@userId">
                            <span>💊</span> <span>Prescriptions</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Patient", "MedicalRecords")"
                           asp-controller="Patient" asp-action="MedicalRecords" asp-route-id="@userId">
                            <span>📋</span> <span>Medical Records</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Patient", "Profile")"
                           asp-controller="Patient" asp-action="Profile" asp-route-id="@userId">
                            <span>👤</span> <span>Profile</span>
                        </a>
                    </li>
                }

                @* =========================
                   Receptionist Menu
                   ========================= *@
                @if (userType == (int)UserType.Receptionist)
                {
                    <li class="nav-item">
                        <a class="nav-link @Active("Reception", "Dashboard")"
                           asp-controller="Reception" asp-action="Dashboard">
                            <span>📊</span> <span>Dashboard</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Reception", "Appointments")"
                           asp-controller="Reception" asp-action="Appointments">
                            <span>📅</span> <span>Appointments</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Reception", "Patients")"
                           asp-controller="Reception" asp-action="Patients">
                            <span>👥</span> <span>Patients</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Reception", "RadiologyRequests")"
                           asp-controller="Reception" asp-action="RadiologyRequests">
                            <span>🩻</span> <span>Radiology Requests</span>
                        </a>
                    </li>
                }

                @* =========================
                   Admin Menu
                   ========================= *@
                @if (userType == (int)UserType.Admin)
                {
                    <li class="nav-item">
                        <a class="nav-link @Active("Admin", "Dashboard")"
                           asp-controller="Admin" asp-action="Dashboard">
                            <span>📊</span> <span>Dashboard</span>
                        </a>
                    </li>

                    @* ضيف هنا أي حاجات Admin خاصة بيه *@
                }

                @* TODO: Doctor Menu / Radiologist Menu / Admin Menu ... *@
                @if (userType == (int)UserType.Radiologist)
                {
                    <li class="nav-item">
                        <a class="nav-link @Active("Radiology", "Requests")"
                           asp-controller="Radiology" asp-action="Requests">
                            🩻 All Requests
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Radiology", "CreateResult")"
                           asp-controller="Radiology" asp-action="CreateResult">
                            ✍️ Add Result
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Radiology", "PatientResults")"
                           asp-controller="Radiology" asp-action="PatientResults">
                            👤 Patient Results
                        </a>
                    </li>

                  
                    <li class="nav-item mt-3">
                        <a class="nav-link @Active("Account", "Profile")"
                           asp-controller="Account" asp-action="Profile">
                            ⚙️ My Profile
                        </a>
                    </li>
                }

            </ul>
        </aside>

        <!-- ===== Main Content ===== -->
        <main class="content">

            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-sm topbar">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">SCMS</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto align-items-center">
                            @if (isLoggedIn)
                            {
                                <li class="nav-item">
                                    <a class="btn btn-outline-danger btn-sm"
                                       asp-controller="Account"
                                       asp-action="Logout">
                                        Logout
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Account"
                                       asp-action="Login">
                                        Login
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="page-container">
                @RenderBody()
            </div>

        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>