                           asp-controller="Doctor" asp-action="Edit">
                            <span>üë§</span> <span>Edit Profile</span>
                        </a>
                    </li>
                }

                @* =========================
                   Patient Menu
                   ========================= *@
                @if (resolvedUserType == (int)UserType.Patient)
                {
                    <li class="nav-item">
                        <a class="nav-link @Active("Patient", "Dashboard")"
                           asp-controller="Patient" asp-action="Dashboard" asp-route-id="@userId">
                            <span>üè†</span> <span>Dashboard</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @Active("Patient", "Appointments")"
                           asp-controller="Patient" asp-action="Appointments" asp-route-id="@userId">
                            <span>üìÖ</span> <span>Appointments</span>
                        </a>
                    </li>

